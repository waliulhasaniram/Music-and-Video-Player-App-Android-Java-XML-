<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.musicandvideoplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_baseline_play_circle_outline_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_play_circle_outline_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.MusicAndVideoPlayer">
        <activity
            android:name=".VideoPlayer"
            android:exported="false" />
        <activity
            android:name=".Music_Player"
            android:exported="false" />
        <activity
            android:name=".Video_LIST"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>